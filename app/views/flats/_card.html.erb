
<li class="mb-3">
  <div class="flat-item d-flex justify-content-between align-items-center">
    <%= link_to flat, class: "text-decoration-none text-dark d-block w-100" do %>
      <div>
        <h5 class="mb-1"><%= flat.name %></h5>
        <p class="mb-0 text-muted"><%= flat.address %></p>
      </div>
    <% end %>
    <div class="btn-group">
      <%= link_to 'Update', edit_flat_path(flat), class: 'btn btn-outline-primary', data: { turbo_frame: "flat_#{flat.id}" } %>
      <%= link_to "Delete", flat, data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to remove this flat?" }, class: "btn btn-outline-danger" %>
    </div>
  </div>
</li>
