<%= turbo_frame_tag "flat_form_modal" do %>
  <%= simple_form_for flat, html: { multipart: true }, data: { turbo_frame: "flat_form_modal" } do |f| %>
  <%= f.error_notification %>
    <div class="row">
      <div class="col-md-12">
        <%= f.input :name %>
      </div>
      <div class="col-md-12">
        <%= f.input :description, as: :text, input_html: { style: "min-height: 150px;" } %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        <%= f.input :address %>
      </div>
      <div class="col-md-6">
        <%= f.input :price %>
      </div>
    </div>

    <div class="mb-3">
      <%= f.input :photos, as: :file, input_html: { multiple: true }, label: 'Picture' %>
    </div>
    <div class="d-flex w-100 justify-content-center">
      <%= f.button :submit, "Validate", class: "btn btn-primary" %>
    </div>
  <% end %>
<% end %>
