<div class="dashboard container mt-4">

  <!-- üß± Grille principale -->
  <div class="row gx-4 gy-4">

    <!-- üßç‚Äç‚ôÇÔ∏è Carte infos utilisateur -->
    <div class="col-lg-6">
      <div class="card dashboard-card">
        <div class='inner-dashboard-card'>
          <div class="avatar-wrapper">
            <div class="avatar">
              <label for="avatar-upload" style="cursor: pointer;">
                <%= image_tag current_user.avatar.attached? ? current_user.avatar : "default-avatar.png", class: "rounded-circle", width: 100, height: 100 %>
              </label>
              <%= form_with(model: current_user, url: avatar_users_path, method: :patch) do |f| %>
                <%= f.file_field :avatar, id: "avatar-upload", class: "d-none", accept: "image/*", onchange: "this.form.submit()" %>
              <% end %>
            </div>
          </div>
        </div>

        <!-- Nom et statistiques -->
        <div class="mt-4 row align-items-center">
          <div class="col-md-6">
            <h2 class="user-name">
              <%= @user.name %> <%= @user.last_name %>
            </h2>
          </div>
          <div class="col-md-6 d-flex justify-content-md-end justify-content-between mt-3 mt-md-0">
            <div class="text-center me-4">
              <div class="stat-value"><%= @bookings_count %></div>
              <div class="stat-label">Voyages</div>
            </div>
            <div class="text-center">
              <div class="stat-value"><%= @reviews_count %></div>
              <div class="stat-label">Notes re√ßues</div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- üìÖ Carte "My bookings" -->
    <div class="col-lg-6">
      <div class="card dashboard-card">
        <h3 class="card-title">My bookings</h3>
        <!-- Contenu √† venir -->
      </div>
    </div>

    <!-- üè† Container "My flats" contenant 2 sous-cartes -->
    <div class="col-lg-12">
      <div class="card dashboard-card p-4">
        <h3 class="card-title card-title-centered">üè° My flats</h3>
        <div class="row gx-4 gy-4">

          <!-- üìÅ Carte "Manage my flats" -->
          <div class="col-md-6">
            <div class="card inner-dashboard-card h-100">
              <div class="card-body">
                  <div class="d-flex align-items-center justify-content-between mb-3 px-3">
                    <h3 class="card-title mb-0">Manage my flats</h3>
                    <div class="text-center">
                      <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#flatModal">
                        + Add a new flat
                      </button>
                    </div>
                    <%= render partial: 'flats/modal'%>
                  </div>
                <% if @flats.any? %>
                  <ul class="list-unstyled" id="flats-list">
                    <%= turbo_stream_from "flats" %>
                    <% @flats.each do |flat| %>
                      <%= render partial: "flats/card", locals: { flat: flat } %>
                    <% end %>
                  </ul>
                <% else %>
                  <p class="text-muted">Vous n'avez pas encore de logement.</p>
                <% end %>
                </div>
            </div>
          </div>

          <!-- üìÜ Carte "Bookings for my flats" -->
          <div class="col-md-6">
            <div class="card inner-dashboard-card h-100">
              <div class="card-body">
                <h3 class="card-title">Bookings for my flats</h3>
                <!-- Contenu √† venir -->
              </div>
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>
