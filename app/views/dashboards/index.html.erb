<div class="container mt-4">

  <!-- üß± Grille principale : 2x2 cards -->
  <div class="row gx-4 gy-4">

    <!-- üßç‚Äç‚ôÇÔ∏è Carte infos utilisateur -->
    <div class="col-lg-6">
      <div class="card dashboard-card shadow-sm rounded-4 p-4">
        <!-- Avatar -->
        <div class="d-flex justify-content-center">
          <div class="rounded-circle border border-2 border-light shadow-sm overflow-hidden" style="width: 130px; height: 130px;">
            <img src="https://via.placeholder.com/150" class="w-100 h-100" style="object-fit: cover;" alt="Avatar de l'utilisateur">
          </div>
        </div>

        <div class="mt-4 row align-items-center">
          <div class="col-md-6">
            <h2 class="h4 fw-semibold text-dark mb-0">
              <%= @user.name %> <%= @user.last_name %>
            </h2>
          </div>
          <div class="col-md-6 d-flex justify-content-md-end justify-content-between mt-3 mt-md-0">
            <div class="text-center me-4">
              <div class="fs-5 fw-bold text-primary"><%= @bookings_count %></div>
              <div class="text-muted small">Voyages</div>
            </div>
            <div class="text-center">
              <div class="fs-5 fw-bold text-primary"><%= @reviews_count %></div>
              <div class="text-muted small">Notes re√ßues</div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- üè† Carte "My flats" -->
    <div class="col-lg-6">
      <div class="card dashboard-card shadow-sm rounded-4 p-4">
        <h3 class="h5 fw-bold mb-3">My flats</h3>
        <!-- Contenu √† venir -->
      </div>
    </div>

    <!-- üìÖ Carte "Mes r√©servations" -->
    <div class="col-lg-6">
      <div class="card dashboard-card shadow-sm rounded-4 p-4">
        <h3 class="h5 fw-bold mb-3">Mes r√©servations</h3>
        <!-- Contenu √† venir -->
      </div>
    </div>

    <!-- ‚ûï Formulaire "Ajouter un logement" -->
    <div class="col-lg-6 d-flex flex-column align-items-center">
      <turbo-frame id="new_flat" class="w-100">
        <div data-controller="toggle" class="w-100">
          <div class="text-center">
            <button class="custom-flat-button" data-action="click->toggle#toggle">
              Ajouter un logement
            </button>
          </div>
          <div data-toggle-target="form" class="d-none mt-3">
            <%= simple_form_for Flat.new, url: flats_path, data: { turbo_frame: "new_flat" } do |f| %>
              <div class="mb-3">
                <%= f.input :name %>
                <%= f.input :description %>
                <%= f.input :address %>
                <%= f.input :price %>
                <%= f.input :longitude %>
                <%= f.input :latitude %>
                <%= f.input :photos, as: :file, input_html: { multiple: true } %>
              </div>
              <%= f.button :submit, "Cr√©er le logement", class: "btn btn-primary" %>
            <% end %>
          </div>
        </div>
      </turbo-frame>
    </div>

  </div>
</div>
