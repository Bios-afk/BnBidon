<div class="dashboard container mt-4">

  <!-- üß± Grille principale -->
  <div class="row gx-4 gy-4">

    <!-- üßç‚Äç‚ôÇÔ∏è Carte infos utilisateur -->
    <div class="col-lg-6">
      <div class="card dashboard-card">
        <div class="avatar-wrapper">
          <div class="avatar">
            <img src="https://via.placeholder.com/150" alt="Avatar de l'utilisateur" />
          </div>
        </div>

        <!-- Nom et statistiques -->
        <div class="mt-4 row align-items-center">
          <div class="col-md-6">
            <h2 class="user-name">
              <%= @user.name %> <%= @user.last_name %>
            </h2>
          </div>
          <div class="col-md-6 d-flex justify-content-md-end justify-content-between mt-3 mt-md-0">
            <div class="text-center me-4">
              <div class="stat-value"><%= @bookings_count %></div>
              <div class="stat-label">Voyages</div>
            </div>
            <div class="text-center">
              <div class="stat-value"><%= @reviews_count %></div>
              <div class="stat-label">Notes re√ßues</div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- üìÖ Carte "My bookings" -->
    <div class="col-lg-6">
      <div class="card dashboard-card">
        <h3 class="card-title">My bookings</h3>
        <!-- Contenu √† venir -->
      </div>
    </div>

    <!-- üè† Container "My flats" contenant 2 sous-cartes -->
    <div class="col-lg-12">
      <div class="card dashboard-card p-4">
        <h3 class="card-title card-title-centered">üè° My flats</h3>
        <div class="row gx-4 gy-4">

          <!-- üìÅ Carte "Manage my flats" -->
          <div class="col-md-6">
            <div class="card inner-dashboard-card h-100">
              <div class="card-body">
                <h3 class="card-title">Manage my flats</h3>
                <!-- Contenu √† venir -->
              </div>
            </div>
          </div>

          <!-- üìÜ Carte "Bookings for my flats" -->
          <div class="col-md-6">
            <div class="card inner-dashboard-card h-100">
              <div class="card-body">
                <h3 class="card-title">Bookings for my flats</h3>
                <!-- Contenu √† venir -->
              </div>
            </div>
          </div>

        </div>
      </div>
    </div>


    <!-- ‚ûï Ajouter un logement : bouton et formulaire centr√©s -->
    <div class="col-lg-12 d-flex flex-column align-items-center">
      <turbo-frame id="new_flat" class="form-wrapper">
        <div data-controller="toggle">
          <div class="text-center">
            <button class="custom-flat-button" data-action="click->toggle#toggle">
              + Add a new flat
            </button>
          </div>

          <div data-toggle-target="form" class="d-none mt-3" id="flat-form">
            <%= simple_form_for Flat.new, url: flats_path, data: { turbo_frame: "new_flat" } do |f| %>

              <div class="row">
                <!-- Ligne 1 -->
                <div class="col-md-6">
                  <%= f.input :name %>
                </div>
                <div class="col-md-6">
                  <%= f.input :description %>
                </div>
              </div>

              <div class="row">
                <!-- Ligne 2 -->
                <div class="col-md-6">
                  <%= f.input :address %>
                </div>
                <div class="col-md-6">
                  <%= f.input :price %>
                </div>
              </div>

              <div class="mb-3">
                <%= f.input :photos, as: :file, input_html: { multiple: true } %>
              </div>

              <%= f.button :submit, "Cr√©er le logement", class: "btn btn-primary" %>

            <% end %>
          </div>

        </div>
      </turbo-frame>
    </div>

  </div>
</div>
